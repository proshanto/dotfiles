[user]
	name = Proshanta Barman
	email = proshanto.barman@gmail.com
[core]
	autocrlf = input
	safecrlf = true
	editor = vim
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
   untracked = "ls-files --others --exclude-standard"
   modified = "ls-files --modified"
	add-untracked = "!git add $(git untracked)"
	add-modified = "!git add $(git modified)"
[color]
	ui = true
[merge]
	tool = meld
[diff]
	tool = meld
[difftool]
	prompt = false
[difftool "meld"]
   cmd = meld "$LOCAL" "$REMOTE"
[mergetool]
	prompt = false
[push]
	default = simple
